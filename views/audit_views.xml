<odoo>
    <!-- Vista tipo lista (tree) para audit.log -->
    <record id="view_audit_log_tree" model="ir.ui.view">
        <field name="name">audit.log.tree</field>
        <field name="model">audit.log</field>
        <field name="arch" type="xml">
            <tree string="Registros de Auditoría">
                <field name="date" string="Fecha"/>
                <field name="user_id" string="Usuario"/>
                <field name="action" string="Acción"/>
                <field name="model_name" string="Modelo"/>
                <field name="record_id" string="ID del registro"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_audit_log" model="ir.actions.act_window">
        <field name="name">Registros de Auditoría</field>
        <field name="res_model">audit.log</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_audit_root" name="Auditoría"/>

    <!-- Submenú que abre la acción -->
    <menuitem id="menu_audit_log"
              name="Registros de Auditoría"
              parent="menu_audit_root"
              action="action_audit_log"/>
</odoo>
